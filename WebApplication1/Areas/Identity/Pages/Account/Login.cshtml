@page
@model LoginModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/site.css" />


<div class="login-form-outer">
    <div class="login-form-container">
        <h1>@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">

                    <div class="input-group">
                        <img class="input-icon" src="~/images/mail.png" />
                        <input asp-for="Input.EmailOrUsername" class="form-control" aria-required="true" placeholder="name@example.com" />
                    </div>
                        <span asp-validation-for="Input.EmailOrUsername" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <div class="input-group">
                        <img class="input-icon" src="~/images/lock.png" />
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    </div>

                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">

                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
