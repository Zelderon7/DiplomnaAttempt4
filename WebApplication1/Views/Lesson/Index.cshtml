@{
}

<h1>@Model.Title</h1>

@foreach (var item in Model.Contents.OrderBy(l => l.OrderIndex))
{
	<div class="card mt-3">
		<h5 class="card-header">@item.Type</h5>
		<div class="card-body">
			@Html.Raw(item.Context)
		</div>
	</div>
})