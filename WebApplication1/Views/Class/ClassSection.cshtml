@{
}

<!-- Header -->
<div class="institution-header">
    <img src="@(Model.PictureUrl ?? "https://placehold.co/280x180")" style="height: 100%;" />
    <h2>@Model.Title</h2>
</div>
<div style="height: 7rem;"></div>

@if(User.IsInRole("ADMIN")){
	<div class="my-3 flex flex-row gap-2">
		<a class="btn btn-success">New Lesson</a>
	</div>
}

<div class="card mt-3">
    <h5 class="card-header">Lessons</h5>
    <div class="card-body">
		@if(Model.Lessons.Count > 0){
			<ul>
				@foreach (var item in Model.Lessons.OrderBy(l => l.OrderIndex))
				{
					<li>
						<a href="@Url.Action("GetLesson", "Class", new { id = item.Id })">@item.Title</a>
					</li>
				}
			</ul>
		}
		else{
			<p class="text-muted">There are no lessons yet :(</p>
		}
		
    </div>
</div>