@model IEnumerable<WebApplication1.Models.Entities.User>

@{
    ViewData["Title"] = "ParticipantsList";
}

<h1 style="margin-left: 30px;">ParticipantsList</h1>
<hr/>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="align-content: center !important;">
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td style="align-content: center !important;">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td style="align-content: center !important;">
                    <form action="RemoveFromInstitution" method="post" style="display: flex !important; justify-content: end !important;">
                    <input type="hidden" name="userId" value="@item.Id" />
                    <input type="hidden" name="instId" value="@ViewData["instId"]" />
                    <button class="btn btn-danger" type="submit">Remove</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
